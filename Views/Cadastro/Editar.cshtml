@model CadastroModel
@{
    ViewData["Title"] = "Editar Usuário";
}
<div class="text-center">

    <h3 class="display-4">Editar Usuário</h3>

</div>

<form asp-controller="Cadastro" asp-action="Editar" method="post">

    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="login">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Digite o Login do usuário" /> 
         @Html.ValidationMessageFor(x => x.Login)
   </div>
 <div></div>
   <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Digite o nome do usuário" /> 
         @Html.ValidationMessageFor(x => x.Name)
   </div>
 <div></div>
   <div class="form-group">
        <label for="perfil">Perfil</label>
        <input type="text" asp-for="Perfil" class="form-control" placeholder="Digite o perfil necessário" /> 
         @Html.ValidationMessageFor(x => x.Perfil)
   </div>
  <br> <br/>

  <button type="submit" class="btn btn-primary">Alterar</button>
  <a class="btn btn-secondary" asp-controller="Cadastro" asp-action="Index" role="button">Voltar</a>

 </form>